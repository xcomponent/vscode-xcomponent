{
	"Create a XComponent state": {
		"prefix": "xcstate",
		"description": "Create a XComponent state",
		"body": [
			"<StateData Id=\"${1}\" Name=\"${2:State name}\" SubGraphKey=\"${3}\">",
			"\t<TriggeredMethods />",
			"</StateData>"
		]
	},
	"Create a triggered method": {
		"prefix": "xctriggeredmethod",
		"description": "Create a triggered method",
		"body": [
			"<TriggeredMethodData IsNodeInitializer=\"${1|false,true|}\" IsSelected=\"${2|true,false|}\" TransitionName=\"${2}\" TriggeringEvent=\"${3}\" />"
		]
	},
	"Create a XComponent transition": {
		"prefix": "xctransition",
		"description": "Create a XComponent transition",
		"body": [
			"<TransitionData Id=\"${1:Index}\" Name=\"${2:Transition name}\" FromKey=\"${3:State + Id}\" ToKey=\"${4:State + Id}\" Type=\"${5|X,TimeOut,Standard|}\" ExecutionDelay=\"${6:0}\" SetCustomTimeout=\"${7|false,true|}\" TriggeringEvent=\"${8:Document Triggering event}\" UserSpecificRule=\"${9|false,true|}\">",
			"\t</MatchingRules>",
			"</TransitionData>"
		]
	}
}