{
  "name": "xcomponent-shared",
  "version": "0.1.0",
  "description": "Shared code between packages",
  "scripts": {
    "compile:dev": "webpack -d --watch --progress",
    "compile": "webpack -p --define process.env.NODE_ENV='\"production\"' --progress --colors",
    "test": "jest --coverage ",
    "tslint": "tslint -c tslint.json src/**/*.ts*"
  },
  "author": "XComponent <dev@xcomponent.com> (http://www.xcomponent.com)",
  "license": "Apache-2.0",
  "main": "./lib/xcomponent-shared.js",
  "types": "./lib/types/index.d.ts",
  "directories": {
    "lib": "./lib"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/test/.*(test|spec))\\.tsx?$",
    "modulePaths": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.ts",
      "!**/src/**/*.d.ts"
    ],
    "setupTestFrameworkScriptFile": "./setup-jasmine-env.js",
    "unmockedModulePathPatterns": [
      "./node_modules/jasmine-reporters"
    ],
    "testEnvironment": "jsdom"
  },
  "dependencies": {
    "es6-promisify": "^5.0.0",
    "xml2js": "^0.4.17"
  },
  "devDependencies": {
    "@types/chai": "^4.0.0",
    "@types/jest": "^20.0.1",
    "babel-polyfill": "^6.23.0",
    "chai": "^4.0.2",
    "clean-webpack-plugin": "^0.1.16",
    "compression": "^1.6.2",
    "extract-text-webpack-plugin": "^3.0.0-beta.3",
    "jasmine-reporters": "^2.2.0",
    "jest": "^20.0.4",
    "jest-cli": "^20.0.4",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "ts-jest": "^20.0.6",
    "ts-loader": "^2.1.0",
    "tslint": "^5.4.3",
    "tslint-loader": "^3.3.0",
    "typescript": "^2.3.4",
    "webpack": "^3.0.0"
  },
  "false": {}
}
